// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String?
  name        String?
  rentals     Rental[]
  carsForRent Car[]
}

model Car {
  id           Int      @id @default(autoincrement())
  make         String
  model        String
  year         Int
  color        String
  bodyType     String
  seatCapacity Int
  fuelCapacity Int
  rentPrice    Float
  description  String?
  location     String
  ownerId      Int
  owner        User      @relation(fields: [ownerId], references: [id])
  images       CarImage[]
  available    Boolean   @default(true)
  rentals      Rental[]
}

model CarImage {
  id   Int    @id @default(autoincrement())
  url  String
  car  Car    @relation(fields: [carId], references: [id])
  carId Int
}

model Rental {
  id        Int       @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  car       Car       @relation(fields: [carId], references: [id])
  carId     Int
}
